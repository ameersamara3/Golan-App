<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="@color/white2"
    tools:context=".Csv">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="146dp"
                            android:layout_height="59dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/editext"
                            android:drawablePadding="20dp"
                            android:fontFamily="sans-serif"
                            android:hint="מספר טלפון"
                            android:inputType="number"
                            android:padding="20dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/titleSection" />

                        <Spinner
                            android:id="@+id/dpinner2"
                            android:layout_width="170dp"
                            android:layout_height="48dp"
                            android:layout_margin="16dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/spinner_bg"
                            android:contentDescription="Category"
                            android:dropDownVerticalOffset="40dp"
                            android:fontFamily="@font/allerta"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/leaf" />

                        <EditText
                            android:id="@+id/leaf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/editext"
                            android:drawablePadding="20dp"
                            android:fontFamily="sans-serif"
                            android:hint="מספר"
                            android:inputType="number"
                            android:padding="20dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="20dp"
                            app:layout_constraintEnd_toEndOf="@+id/dpinner2"
                            app:layout_constraintStart_toStartOf="@+id/dpinner2"
                            app:layout_constraintTop_toBottomOf="@+id/datepicker6" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="90dp"
                            android:layout_marginEnd="10dp"
                            android:text="תחילת פריחה:"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView9" />


                        <Button
                            android:id="@+id/datepicker2"
                            style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="80dp"
                            android:backgroundTint="@color/white"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:text="Button"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/phone" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="10dp"
                            android:text="30% פריחה:"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView2" />


                        <Button
                            android:id="@+id/datepicker3"
                            style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"

                            android:backgroundTint="@color/white"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:text="Button"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/datepicker2" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/black"
                            android:text="שיא פריחה:"
                            android:textSize="20dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView3" />


                        <Button
                            android:id="@+id/datepicker4"
                            style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@color/white"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:text="Button"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/datepicker3" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="10dp"
                            android:text="ביופקס:"
                            android:textSize="20dp"
                            android:textColor="@color/black"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView4" />


                        <Button
                            android:id="@+id/datepicker5"
                            style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@color/white"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:text="Button"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/datepicker4" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/black"
                            android:text="100 מעלות:"
                            android:textSize="20dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView5" />


                        <Button
                            android:id="@+id/datepicker6"
                            style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="30dp"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/white"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:text="Button"
                            android:textSize="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/datepicker5" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="55dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/black"
                            android:text="לחות עלה:"
                            android:textSize="20dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView6" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="55dp"
                            android:layout_marginEnd="10dp"
                            android:text="רימפרו:"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView7" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="16dp"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:minHeight="48dp"
                            android:text="מספר בעל החלקה:"
                            android:textSize="20dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/titleSection" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/update"
                            android:layout_width="297dp"
                            android:layout_height="99dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="50dp"
                            android:backgroundTint="@color/dark_green"
                            android:text="שמור"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView8" />

                        <TextView
                            android:id="@+id/titleArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="22dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/textView2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView9" />

                        <TextView
                            android:id="@+id/titleSection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="TextView"
                            android:textSize="22dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Space
                            android:layout_width="500dp"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:backgroundTint="@color/black"
                            app:layout_constraintBottom_toTopOf="@+id/titleArea"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView9" />

                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
